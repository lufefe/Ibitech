<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#295852"
    tools:context="com.envy.patrema.envy_patrema.SlideTwo">

    <RelativeLayout
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="40dp"
        android:layout_width="325dp"
        android:layout_height="400sp"
        android:background="#f9f6f5"
        >

        <TextView
            android:id="@+id/more_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="4sp"
            android:layout_marginTop="12sp"
            android:gravity="center_horizontal"
            android:text="Additional details"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/Zip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/more_details"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="18dp"
            android:ems="10"
            android:hint="Zip code "
            android:inputType="textPersonName"
            android:text="" />



        <TextView
            android:id="@+id/Status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/Zip"
            android:layout_alignStart="@+id/Zip"
            android:layout_below="@+id/Zip"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:text="Status"
            android:textSize="21dp" />


        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/list_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/Status"
            android:layout_toEndOf="@+id/more_details"
            android:layout_toRightOf="@+id/more_details"></android.support.v7.widget.AppCompatSpinner>

        <TextView
            android:id="@+id/blood_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/list_status"
            android:layout_alignStart="@+id/Status"
            android:layout_below="@+id/Status"
            android:text="Bloo Type"
            android:layout_marginTop="5dp"
            android:textSize="21dp"/>

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/list_blood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/list_status"
            android:layout_alignStart="@+id/list_status"
            android:layout_below="@+id/Status"></android.support.v7.widget.AppCompatSpinner>

        <EditText
            android:id="@+id/weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/list_blood"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="18dp"
            android:ems="10"
            android:hint="Weight "
            android:inputType="textPersonName"
            android:text="" />


        <EditText
            android:id="@+id/height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/weight"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="18dp"
            android:ems="10"
            android:hint="Height "
            android:inputType="textPersonName"
            android:text="" />


        <TextView
            android:id="@+id/picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="4sp"
            android:layout_marginTop="12sp"
            android:layout_below="@+id/height"
            android:gravity="center_horizontal"
            android:text="Upload a profile  picture"
            android:textSize="18sp" />

    </RelativeLayout>




</LinearLayout>
